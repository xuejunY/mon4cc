<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.mon4cc.mapper.TopologyconfigurationMapper">


    <resultMap id="BaseResultMap" type="com.mon4cc.entity.TopologyConfiguration">
        <id column="topologyId" property="topologyId" />
        <result column="topologyName" property="topologyName" />
        <result column="isLocal" property="isLocal" />
        <result column="topologyXml" property="topologyXml" />
        <result column="description" property="description" />
        <result column="state" property="state" />
        <result column="creater" property="creater" />
        <result column="createTime" property="createTime" />
    </resultMap>
    <update id="addXml" parameterType="TopologyConfiguration">
        update topologyconfiguration set topologyXml = #{modelXml}
        where topologyTd = #{tid}
    </update>
    
    <select id="getXml" >
        select topologyXml from topologyconfiguration where topologyId=#{tid}
    </select>

</mapper>
